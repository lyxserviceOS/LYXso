# LYXso Environment Variables Template
# Copy this file to .env.local and fill in your actual values

# =============================================================================
# API Configuration - REQUIRED
# =============================================================================
# Backend API URL (lyx-api on Fly.io)
NEXT_PUBLIC_API_BASE_URL=https://lyxso-api.fly.dev

# =============================================================================
# Organization Configuration - REQUIRED
# =============================================================================
# Default organization ID for development/testing
# In production, this is retrieved from user session
NEXT_PUBLIC_DEFAULT_ORG_ID=your-org-id-here
# Alternative name (fallback pattern)
NEXT_PUBLIC_ORG_ID=your-org-id-here

# =============================================================================
# Supabase Configuration - REQUIRED
# =============================================================================
# Public Supabase URL
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
# Public anonymous key for client-side operations
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here

# Server-side Supabase configuration (optional, for API routes)
# If not provided, will fall back to NEXT_PUBLIC_* variants
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key-here
# Service role key for admin operations (keep secret!)
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# =============================================================================
# Admin Configuration
# =============================================================================
# Email address for admin access control
NEXT_PUBLIC_ADMIN_EMAIL=admin@example.com

# =============================================================================
# Analytics & Monitoring - OPTIONAL
# =============================================================================
# Google Analytics Measurement ID
NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX

# Sentry configuration for error tracking
SENTRY_ORG=your-sentry-org
SENTRY_PROJECT=your-sentry-project
# Sentry auth token for uploading source maps (CI/CD only)
SENTRY_AUTH_TOKEN=your-sentry-auth-token

# =============================================================================
# Payment Integration - OPTIONAL
# =============================================================================
# Stripe publishable key
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_xxxxx

# =============================================================================
# External Services - OPTIONAL
# =============================================================================
# Google reCAPTCHA site key
NEXT_PUBLIC_RECAPTCHA_SITE_KEY=your-recaptcha-site-key

# =============================================================================
# Development Settings
# =============================================================================
# Node environment (development, production, test)
NODE_ENV=development

# =============================================================================
# Build Configuration - OPTIONAL
# =============================================================================
# Set to 'true' to skip source map upload to Sentry during build
NEXT_PUBLIC_SKIP_SENTRY=false
